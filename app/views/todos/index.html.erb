<div class="container">
  <div class="row">
    <div class="span6">
      <%= render 'flash_messgaes' %>
      <h1>Shared Todo App</h1>
      <hr>
      <b>Total number of Todo  : <%=@todo_array.length%></b>
      <div class="well">
        <%= render 'list_todos' %>
      </div> <!-- well -->
      <a href="#"> Add new Todo</a>
      <div id="add_todo_form">
        <%= form_for @new_todo, :url => { :action => "add" }, remote: true  do |f|  %>
          <%= f.text_field  :todo_item %>
          <%= f.submit "Add todo", class: "btn btn-primary" %>
        <%end%>
      </div>
    </div> <!-- span6 -->
  </div> <!-- row -->
</div> <!-- container -->
